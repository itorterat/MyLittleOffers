<% content_for :title, "MLO - List of offers" %>

<h1>List of offers</h1>
<% if Offer.all.where(state: "published").empty? and current_user.try(:role) != "admin" %>
  <p> No offer available at this moment ... </p>
<% else %>
  <% @offers.each do |offer| %>
    <% if offer.state == "published" or current_user.try(:role) == "admin" %>
      <div>
        <a href= "/offers/<%= offer.id.to_s %>">Offer nÂ°<%= offer.id.to_s %></a><br><br>
        Title: <%= offer.title %><br><br>
        State: <%= offer.state %><br><br>
      </div> <br>
    <% end %>
  <% end %>
<% end %>
