<% content_for :title do %>
  <%= t('.title_page') %>
<% end %>

<h1>Post an offer</h1>

<%= form_for @offer do |f| %>
  <div class="field">
    <%= f.label :title, t('.title_offer') %><br />
    <%= f.text_field :title %>
    <%= @offer.errors[:title].first %><br /><br />
  </div>

  <div class="field">
    <%= f.label :content, t('.description_offer') %><br />
    <%= f.text_area :content, :cols => "40", :rows => "5" %>
    <%= @offer.errors[:content].first %><br /><br />
  </div>
  <div class="field">
    <%= f.label :price, t('.price_offer') %><br />
    <%= f.number_field :price %>
    <%= @offer.errors[:price].first %><br /><br />
  </div>
  <div class="actions">
    <%= f.submit t('.submit_offer') %>
  </div>
<% end %>


<br /><br />

<%= link_to t('.list_offers'), offers_path %>
